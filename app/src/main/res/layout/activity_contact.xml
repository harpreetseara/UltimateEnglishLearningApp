<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.betterlife.dell.ultimateenglishlearningapp.activities.Contact">


    <TextView
        android:id="@+id/abouttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Contact Us"
        android:background="@drawable/custombottomborder"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:id="@+id/contactustv"
        android:text="You can email us at ultimatelearningapp@gmail.com for any problems and Queries"
        android:textColor="#414141"
        android:textSize="18dp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Any suggestions would be appericiated"
        android:textColor="#414141"
        android:textSize="18dp" />



    <TextView
        android:id="@+id/aboutclose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:text="close"
        android:textStyle="bold"
        android:onClick="closecontact"
        android:textColor="#000000"
        android:textSize="20dp" />
</LinearLayout>
